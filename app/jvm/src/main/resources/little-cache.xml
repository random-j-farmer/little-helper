<ehcache:config xmlns:ehcache="http://www.ehcache.org/v3">

    <ehcache:persistence directory="little-cache.ehc"/>

    <!-- we do  not use ehc expiration.

    it is done by the application so it can use stale information if a webservice
    is not responding (zkillboard on busy weekends)
    -->
    <ehcache:cache alias="characterIDCache">
        <ehcache:key-type>java.lang.String</ehcache:key-type>
        <ehcache:value-type>me.rjfarmer.rlh.api.CharacterIDAndName</ehcache:value-type>
        <ehcache:resources>
            <ehcache:heap unit="entries">5000</ehcache:heap>
            <ehcache:disk unit="MB" persistent="true">50</ehcache:disk>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="characterInfoCache">
        <ehcache:key-type>java.lang.Long</ehcache:key-type>
        <ehcache:value-type>me.rjfarmer.rlh.api.CharacterInfo</ehcache:value-type>
        <ehcache:resources>
            <ehcache:heap unit="entries">2000</ehcache:heap>
            <ehcache:disk unit="MB" persistent="true">100</ehcache:disk>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="zkStatsCache">
        <ehcache:key-type>java.lang.Long</ehcache:key-type>
        <ehcache:value-type>me.rjfarmer.rlh.api.ZkStats</ehcache:value-type>
        <ehcache:resources>
            <ehcache:heap unit="entries">2000</ehcache:heap>
            <ehcache:disk unit="MB" persistent="true">100</ehcache:disk>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="listCharactersCache">
        <ehcache:key-type>java.lang.String</ehcache:key-type>
        <ehcache:value-type
                >me.rjfarmer.rlh.api.ListCharactersResponse
        </ehcache:value-type>
        <ehcache:resources>
            <ehcache:heap unit="entries">200</ehcache:heap>
            <ehcache:disk unit="MB" persistent="true">50</ehcache:disk>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="dscanResultsCache">
        <ehcache:key-type>java.lang.String</ehcache:key-type>
        <ehcache:value-type
                >me.rjfarmer.rlh.api.DScanParseResponse
        </ehcache:value-type>
        <ehcache:resources>
            <ehcache:heap unit="entries">200</ehcache:heap>
            <ehcache:disk unit="MB" persistent="true">50</ehcache:disk>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="jwtTokenCache">
        <ehcache:key-type>java.lang.String</ehcache:key-type>
        <ehcache:value-type
                >me.rjfarmer.rlh.eve.JsonWebToken
        </ehcache:value-type>
        <!-- EXPIRE THE REFRESH TOKEN!!!! -->
        <ehcache:expiry>
            <ehcache:ttl unit="hours">12</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:resources>
            <ehcache:heap unit="entries">100</ehcache:heap>
            <ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
        </ehcache:resources>
    </ehcache:cache>

</ehcache:config>

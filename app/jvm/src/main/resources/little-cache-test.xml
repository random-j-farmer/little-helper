<!-- configuration for tests - no persistence! -->

<ehcache:config xmlns:ehcache="http://www.ehcache.org/v3">

    <ehcache:cache alias="characterIDCache">
        <ehcache:key-type copier="org.ehcache.internal.copy.SerializingCopier">java.lang.String</ehcache:key-type>
        <ehcache:value-type copier="org.ehcache.internal.copy.SerializingCopier">me.rjfarmer.rlh.api.CharacterIDAndName</ehcache:value-type>
        <ehcache:eviction-prioritizer>LRU</ehcache:eviction-prioritizer>
        <ehcache:resources>
            <ehcache:heap size="5000" unit="entries"/>
        </ehcache:resources>

    </ehcache:cache>

    <ehcache:cache alias="characterInfoCache">
        <ehcache:key-type copier="org.ehcache.internal.copy.SerializingCopier">java.lang.Long</ehcache:key-type>
        <ehcache:value-type copier="org.ehcache.internal.copy.SerializingCopier">me.rjfarmer.rlh.api.CharacterInfo</ehcache:value-type>
        <ehcache:eviction-prioritizer>LRU</ehcache:eviction-prioritizer>
        <ehcache:resources>
            <ehcache:heap size="2000" unit="entries"/>
        </ehcache:resources>

    </ehcache:cache>

    <ehcache:cache alias="zkStatsCache">
        <ehcache:key-type copier="org.ehcache.internal.copy.SerializingCopier">java.lang.Long</ehcache:key-type>
        <ehcache:value-type copier="org.ehcache.internal.copy.SerializingCopier">me.rjfarmer.rlh.api.ZkStats</ehcache:value-type>
        <ehcache:eviction-prioritizer>LRU</ehcache:eviction-prioritizer>
        <ehcache:resources>
            <ehcache:heap size="2000" unit="entries"/>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="listCharactersCache">
        <ehcache:key-type copier="org.ehcache.internal.copy.SerializingCopier">java.lang.String</ehcache:key-type>
        <ehcache:value-type copier="org.ehcache.internal.copy.SerializingCopier">me.rjfarmer.rlh.api.ListCharactersResponse</ehcache:value-type>
        <ehcache:eviction-prioritizer>LRU</ehcache:eviction-prioritizer>
        <ehcache:resources>
            <ehcache:heap size="200" unit="entries"/>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="dscanResultsCache">
        <ehcache:key-type copier="org.ehcache.internal.copy.SerializingCopier">java.lang.String</ehcache:key-type>
        <ehcache:value-type copier="org.ehcache.internal.copy.SerializingCopier">me.rjfarmer.rlh.api.DScanParseResponse</ehcache:value-type>
        <ehcache:eviction-prioritizer>LRU</ehcache:eviction-prioritizer>
        <ehcache:resources>
            <ehcache:heap size="200" unit="entries"/>
        </ehcache:resources>
    </ehcache:cache>

    <ehcache:cache alias="jwtTokenCache">
        <ehcache:key-type copier="org.ehcache.internal.copy.SerializingCopier">java.lang.String</ehcache:key-type>
        <ehcache:value-type
                copier="org.ehcache.internal.copy.SerializingCopier">me.rjfarmer.rlh.eve.JsonWebToken</ehcache:value-type>
        <ehcache:eviction-prioritizer>LRU</ehcache:eviction-prioritizer>
        <ehcache:resources>
            <ehcache:heap size="20" unit="entries"/>
        </ehcache:resources>
    </ehcache:cache>

</ehcache:config>
